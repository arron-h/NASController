<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="40px"
    android:weightSum="1">

    <ImageButton
        android:layout_width="75dp"
        android:layout_height="wrap_content"
        android:id="@+id/options_button"
        android:layout_weight="0.10"
        android:src="@android:drawable/ic_menu_preferences"
        android:onClick="onOptions" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="96dp"
        android:layout_gravity="center_horizontal"></RelativeLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:weightSum="1">

        <Button android:id="@+id/button_start"
            android:layout_width="150dp"
            android:layout_height="72dp"
            android:text="Start"
            android:onClick="onStart"
            android:layout_weight="0.10" />

        <Button android:id="@+id/button_shutdown"
            android:layout_width="150dp"
            android:layout_height="72dp"
            android:text="Shutdown"
            android:onClick="onShutdown"
            android:layout_weight="0.07" />
    </LinearLayout>

    <TextView
        android:layout_width="622dp"
        android:layout_height="239dp"
        android:id="@+id/textView9"
        android:layout_gravity="center_horizontal" />

</LinearLayout>